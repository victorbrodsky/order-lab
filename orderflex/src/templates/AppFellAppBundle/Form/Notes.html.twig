{#{% if collapsein is not defined %}#}
    {% set collapsein = "in" %}
{#{% endif %}#}


<div class="panel panel-default">

    <div class="panel-heading">
        <h4 class="panel-title">
            <a data-toggle="collapse" href="#notes">
                Notes and comments
            </a>
        </h4>
    </div>

    <div id="notes" class="panel-collapse collapse {{ collapsein }}">
        <div class="panel-body">

            <div class="well">
                {{ form_row(form.notes) }}
            </div>

            {# Custom button that won't submit the form #}
            {% if cycle == "edit" or cycle == "show" %}
                <button type="button" id="saveNotesAndComments-button" onclick="saveNotesAndComments()">Save notes and comments</button>
            {% endif %}

        </div> <!-- panel-body -->
    </div> <!-- panel-collapse -->

</div> <!-- panel panel-info -->



