{% import "AppFellAppBundle/Default/fellappmacros.html.twig" as fellappmacros %}


{% if collapsein is not defined %}
    {% set collapsein = "in" %}
{% endif %}

{#{% if showScreeningQuestions %}#}
    {#{% set collapsein = "in" %}#}
{#{% endif %}#}

<!-- Fellowship Type -->
<div class="panel panel-info" style="display: none;">
    <div class="panel-heading">
        <h4 class="panel-title">
            <a data-toggle="collapse" href="#fellowship-screening-questions">
                Screening Questions
            </a>
        </h4>
    </div>
    <div id="fellowship-screening-questions" class="panel-collapse collapse {{ collapsein }}">
        <div class="panel-body">

            <div class="well">
                <div class="row">
                    <div class="col-xs-12">

                        {#form-node-holder<br>#}
                        <div id="form-node-holder">
                            <style>
                                #form-node-holder > .formnode-holder:not(:last-child) {
                                    margin-bottom: 20px;      /* space between rows */
                                }
                            </style>
                        </div>

                    </div>
                </div> <!-- row -->
            </div> {#well#}

        </div> <!-- panel-body -->
    </div> <!-- panel-collapse -->
</div> <!-- panel panel-info -->
