    function showHideWellByRadioButtons_onchange(element) {
        console.log('showHideWellByRadioButtons');
        $(element).find('input:radio').on('change', function () {
            var checkedValue = $(this).val();
            console.log("checkedValue="+checkedValue);
            if (checkedValue == "0") {
