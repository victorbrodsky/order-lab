        //console.log('addEventListener: target='+target);
        if (!target) {
            return;
        }

        // Find the collapsed panel
        const panel = target.closest('.panel-collapse.collapse');

        if (panel && !panel.classList.contains('in')) {
            // Trigger the parent toggle
            const toggle = document.getElementById('section-recommendations');
            if (toggle) {
                toggle.click();
            }

            // After the panel is fully shown, scroll to the anchor
            $(panel).on('shown.bs.collapse', function () {
                target.scrollIntoView({ behavior: 'smooth' });
            });
        }
    });

