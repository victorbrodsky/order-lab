{% extends "AppCrnBundle/Default/base.html.twig" %}

{% import "AppOrderformBundle/Default/formmacros.html.twig" as formmacros %}
{#{% import "AppUserdirectoryBundle/Default/usermacros.html.twig" as usermacros %}#}
{% import "AppCrnBundle/Default/crnmacros.html.twig" as crnmacros %}


{% block title %}
    {{ title }}
{% endblock %}


{% block content %}

    <h4 class="text-info crn-title" align="center">
        {{ title|raw }}
    </h4>
    <br>


    <input type="hidden" id="formcycle" value="{{ cycle }}" />
    {#<input type="hidden" id="mrntype" value="{{ mrntype }}" />#}
    {#<input type="hidden" id="mrn" value="{{ mrn }}" />#}

    {{ patient.obtainPatientInfoTitle()|raw }}
    {% set mergeInfo = patient.obtainMergeInfo() %}
    {% if mergeInfo %}
        <div class="well well-sm">
            Merge Info: <br>
            {{ patient.obtainMergeInfo()|raw }}
        </div>
    {% endif %}
    {% set allMrnStr = patient.obtainAllMrnStr(true) %}
    {% if allMrnStr %}
        <div class="well well-sm">
            <b>Previous MRN(s):</b><br>
            {{ allMrnStr|raw }}
        </div>
    {% endif %}

    {{ form_start(form) }}
        {#{{ form_widget(form) }}#}

        {{ formmacros.field(form.keytype) }}
        {{ formmacros.field(form.mrn) }}
        {{ formmacros.field(form.dob) }}
        {{ formmacros.field(form.lastname) }}
        {{ formmacros.field(form.firstname) }}
        {{ formmacros.field(form.middlename) }}
        {{ formmacros.field(form.suffix) }}
        {{ formmacros.field(form.gender) }}
        {{ formmacros.field(form.phone) }}
        {{ formmacros.field(form.email) }}

        {% if form.update is defined %}
            <br>
            {{ form_widget(form.update) }}
        {% endif %}

    {{ form_end(form) }}


    <br>
    {% if cycle == "show" %}
        <p>
            <a class="btn btn-default" href="{{ path('crn_single_patient_edit', { 'id': patient.id}) }}">Edit</a>
        </p>
    {% endif %}
    {% if cycle == "edit" %}
        <p>
            {#<a class="btn btn-default" href="{{ path('crn_patient_view_by_mrn', { 'mrn': mrnNumber, 'mrntype': mrnTypeId, 'show-tree-depth': 2}) }}" target="_blank">Cancel</a>#}
            <a class="btn btn-default" href="{{ path('crn_single_patient_view', { 'id': patient.id}) }}">Cancel</a>
        </p>
    {% endif %}

    <br>
    {#{{ crnmacros.crnEntriesTable(messages,null,null,"simple") }}#}
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" href="#messages">Patient Record</a>
                </h4>
            </div>
            <div id="messages" class="panel-collapse collapse">
                <div class="panel-body">
                    {{ crnmacros.crnEntriesTable(messages,null,null,"simple") }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}

