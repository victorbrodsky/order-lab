            } catch (e) {
                // fallback: simple select2 without data
                console.log('gajax-combobox-jobtitle = no data');
                $('.ajax-combobox-jobtitle').select2({
                    width: '100%',
                    dropdownAutoWidth: true,
                    placeholder: 'Select a job title',
                    allowClear: true
                });
            }

            //ajax-combobox-residencyspecialty
