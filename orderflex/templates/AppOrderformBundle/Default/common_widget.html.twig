{% block form_row %}
    {#{% spaceless %}#}
        {#<div>#}
            {#<p>#}
                {#<div class="row">#}
                    {#{{ form_errors(form) }}#}
                    {#<div class="col-xs-6" align="right">#}
                        {#{{ form_label(form) }}#}
                    {#</div>#}
                    {#<div class="col-xs-6" align="left">#}
                        {#{{ form_widget(form) }}#}
                    {#</div>#}
                {#</div>#}
            {#</p>#}
        {#</div>#}
    {#{% endspaceless %}#}
    {#Since twig/twig 3.12: Twig Filter "spaceless" is deprecated#}
    {#{% apply spaceless %}#}
        <div>
            <p>
            <div class='row'>
                {{ form_errors(form) }}
                <div class='col-xs-6' align='right'>
                    {{ form_label(form) }}
                </div>
                <div class='col-xs-6' align='left'>
                    {{ form_widget(form) }}
                </div>
            </div>
            </p>
        </div>
    {#{% endapply %}#}
{% endblock form_row %}



{% block form_errors %}
    {% if errors|length > 0 -%}
        {%- for error in errors -%}
            <p class="text-danger">
                {{ error.message|raw }}
            </p>
        {%- endfor -%}
    {%- endif %}
{% endblock form_errors %}



