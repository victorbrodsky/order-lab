{#{% extends '::base.html.twig' %}#}

{% extends "AppOrderformBundle/Default/base.html.twig" %}

{% block content %}
{% block body -%}
    <h1>Scan list</h1>

    <div class="btn_margin_top">
        <form method="get" action="{{ path('scan_new') }}">
            <button type="submit" class="btn btn-primary btn-success">New Scan Request</button>
        </form>
    </div>
    
    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Mag</th>
                <th>Scanregion</th>
                <th>Note</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('scan_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.mag }}</td>
                <td>{{ entity.scanregion }}</td>
                <td>{{ entity.note }}</td>
                <td>{{ entity.status }}</td>
                <td>              
                    <a href="{{ path('scan_show', { 'id': entity.id }) }}">show</a>                  
                    <a href="{{ path('scan_edit', { 'id': entity.id }) }}">edit</a>                  
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
       
{% endblock %}
{% endblock %}
    