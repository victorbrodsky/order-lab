{% block content %}

    <div class="panel panel-primary">
        <div class="panel-heading">
            <h4 class="panel-title text-left">
                <a data-toggle="collapse" href="#panel-{{ panel.id }}">
                    {{ title }}
                </a>
            </h4>
        </div>
        <div id="panel-{{ panel.id }}" class="panel-collapse collapse in">
            <div class="panel-body">
                <div class="user-panel-holder" style="background-color:inherit;">
                    <table class="table table-hover table-condensed text-left">
                        <thead>
                        <tr>
                            <th class="col-sm-1">ID</th>
                            <th class="col-sm-3">Antibody</th>
                            <th class="col-sm-3">Host</th>
                            <th class="col-sm-2">Clone</th>
                            <th class="col-sm-3">Reactivity</th>
                        </tr>
                        </thead>

                        <tbody >
                        {% for antibody in antibodies %}
                            <tr>
                                <td>
                                    {{ antibody.id }}
                                </td>

                                <td>
                                    {{ antibody.name }}
                                </td>

                                <td>
                                    {{ antibody.host }}
                                </td>

                                <td>
                                    {{ antibody.clone }}
                                </td>

                                <td>
                                    {{ antibody.reactivity }}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    {#{% for antibody in antibodies %}#}
        {#<p>#}
            {#{{ antibody }}#}
        {#</p>#}
    {#{% endfor %}#}

{% endblock %}
