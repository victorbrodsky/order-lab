                    </div>
                    <br>

                    <div class="row">
                        <div class="col-xs-4">
                            {{ form_widget(filterform.searchIrbNumber) }}
                        </div>
                        <div class="col-xs-4">
                            {{ form_widget(filterform.searchTitle) }}
                        </div>
                        <div class="col-xs-4">
