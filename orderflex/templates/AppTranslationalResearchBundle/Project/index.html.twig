            {% endif %}

            <div id="transres-AdvancedSearch" class="panel-collapse collapse {{ advacedCollapse }}">
                <div class="panel-body">

                    <div class="row">
                        <div class="col-xs-4">
                            {{ form_widget(filterform.state,{'attr': {'placeholder': 'Status'}}) }}
