<!DOCTYPE html>

<html>

<head>

    {#{% stylesheets#}
        {#'bundles/appuserdirectory/bootstrap/css/*' filter='cssrewrite'#}
        {#'bundles/appuserdirectory/form/css/form.css' filter='cssrewrite'#}
    {#%}#}
        {#<link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />#}
    {#{% endstylesheets %}#}

    {#{% stylesheets#}
        {#'bundles/appuserdirectory/bootstrap/css/*'#}
        {#'bundles/appuserdirectory/form/css/form.css'#}
    {#%}#}
        {#<link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />#}
    {#{% endstylesheets %}#}

    {###<link rel="stylesheet" type="text/css" href="{{ asset('orderassets/AppUserdirectoryBundle/bootstrap/css/*') }}" />###}
    <link rel="stylesheet" type="text/css" href="{{ asset('orderassets/AppUserdirectoryBundle/bootstrap/css/bootstrap.min.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('orderassets/AppUserdirectoryBundle/bootstrap/css/bootstrap-theme.min.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('orderassets/AppUserdirectoryBundle/form/css/form.css') }}" />

    {#<link rel="stylesheet" type="text/css" href="{{ asset('../App/UserdirectoryBundle/Resources/public/bootstrap/css/bootstrap.min.css') }}" />#}
    {#<link rel="stylesheet" type="text/css" href="{{ asset('bundles/appuserdirectory/bootstrap/css/bootstrap-theme.min.css') }}" />#}
    {#<link rel="stylesheet" type="text/css" href="{{ asset('bundles/appuserdirectory/form/css/form.css') }}" />#}


    <title>O R D E R</title>

    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {% import "AppUserdirectoryBundle/Default/usermacros.html.twig" as usermacros %}
    {{ usermacros.nonLiveSiteRedirect() }}

    <link rel="icon" type="image/x-icon" href="{{ asset('glyphicons-157-show-thumbnails.png') }}" />

</head>


<body>


<div class="container">

    <div class="text-center">

        {#<input type="hidden" id="heartbeatInput" name="heartbeatInput-status" value="alive" />#}

        {{ usermacros.nonLiveSiteWarning() }}
        {{ usermacros.browserCheck() }}

        {#{% set platformLogo = user_security_utility.getPlatformLogo() %}#}
        {% if platformLogo is defined and platformLogo %}
            {#height="80" width="300"#}
            <br><br>
            <p>
                <img src="{{ asset(platformLogo) }}" alt="O R D E R" height="{{ height }}" width="{{ width }}">
            </p>
        {% else %}
            <h2 class="alert alert-info well-lg safary-fix" align="center">O R D E R</h2>
        {% endif %}

        <br>

        {#{% for flashMessage in app.flashes('warning') %}#}
            {#<div style="height: 1%;">&nbsp;</div>#}
            {#<p class="alert alert-danger center-block" align="middle" style="width: 70%;">{{ flashMessage|raw }}</p>#}
        {#{% endfor %}#}

        {% for flashMessage in app.flashes('notice') %}
            <div style="height: 1%;">&nbsp;</div>
            <p class="alert alert-info center-block" align="middle" style="width: 70%;">{{ flashMessage|raw }}</p>
        {% endfor %}
        {% for flashMessage in app.flashes('status-changed') %}
            <div style="height: 1%;">&nbsp;</div>
            <p class="alert alert-success center-block" align="middle" style="width: 70%;">{{ flashMessage|raw }}</p>
        {% endfor %}
        {% for flashMessage in app.flashes('warning') %}
            <div style="height: 1%;">&nbsp;</div>
            <p class="alert alert-danger center-block" align="middle" style="width: 70%;">{{ flashMessage|raw }}</p>
        {% endfor %}
        {% for flashMessage in app.flashes('pnotify') %}
            <input type="hidden" id="pnotify-notice" value="{{ flashMessage|raw }}" />
        {% endfor %}
        {% for flashMessage in app.flashes('pnotify-error') %}
            <input type="hidden" id="pnotify-notice" class="pnotify-notice-error" value="{{ flashMessage|raw }}" />
        {% endfor %}
        {% for flashMessage in app.flashes('pnotify-success') %}
            <input type="hidden" id="pnotify-notice" class="pnotify-notice-success" value="{{ flashMessage|raw }}" />
        {% endfor %}


        <br>

        {#Welcome to the O R D E R platform!#}
        {{ mainhome_title }}

        <br><br>

        The following sites are available:

        <br><br>

        {% if user_security_utility.isSiteShowLinkNavbar(scan_sitename) %}
            <p><a href="{{ path('scan_home') }}">Glass Slide Scan Orders</a></p>
        {% endif %}

        <p><a href="{{ path('employees_home') }}">Employee Directory</a></p>

        {% if user_security_utility.isSiteShowLinkNavbar(fellapp_sitename) %}
            <p><a href="{{ path('fellapp_home') }}">Fellowship Applications</a></p>
        {% endif %}

        {% if user_security_utility.isSiteShowLinkNavbar(resapp_sitename) %}
            <p><a href="{{ path('resapp_home') }}">Residency Applications</a></p>
        {% endif %}

        {% if user_security_utility.isSiteShowLinkNavbar(deidentifier_sitename) %}
            <p><a href="{{ path('deidentifier_home') }}">Deidentifier</a></p>
        {% endif %}

        {% if user_security_utility.isSiteShowLinkNavbar(vacreq_sitename) %}
            <p><a href="{{ path('vacreq_home') }}">Vacation Request</a></p>
        {% endif %}

        {% if user_security_utility.isSiteShowLinkNavbar(calllog_sitename) %}
            <p><a href="{{ path('calllog_home') }}">Call Log Book</a></p>
        {% endif %}

        {% if user_security_utility.isSiteShowLinkNavbar(crn_sitename) %}
            <p><a href="{{ path('crn_home') }}">Critical Result Notifications</a></p>
        {% endif %}

        {% if user_security_utility.isSiteShowLinkNavbar(translationalresearch_sitename) %}
            <p><a href="{{ path('translationalresearch_home') }}">Translational Research</a></p>
        {% endif %}

        {% if user_security_utility.isSiteShowLinkNavbar(dashboard_sitename) %}
            <p><a href="{{ path('dashboard_home') }}">Dashboards</a></p>
        {% endif %}


        {% if tenantBaseUrlArr is defined and tenantBaseUrlArr|length > 0 %}
            <div class="well">
            <p>
                {{ greetingText|raw }}
            </p>
            {% for tenant in tenantBaseUrlArr %}
                <p>{{ tenant|raw }}</p>
            {% endfor %}
            </div>
        {% endif %}

        {% include 'AppUserdirectoryBundle/Default/footer.html.twig' %}

    </div> <!-- /text-center -->

</div> <!-- /container -->

</body>

</html>
