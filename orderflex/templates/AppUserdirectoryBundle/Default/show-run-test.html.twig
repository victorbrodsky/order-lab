{% extends "AppUserdirectoryBundle/Default/base.html.twig" %}


{% block title %}
    Testing
{% endblock %}

{% block content %}

    <input type="hidden1" id="testFiles" value="{{ testFiles }}" />

    <div id="message">Please Wait ...</div>

    {#<code><pre>#}
    <div id="result"></div>
    {#</pre></code>#}

{% endblock %}


{% block additionaljs %}

    <script>
        $(document).ready(function () {

            var testFiles = $('#testFiles').val();
            var filesArray = testFiles.split(",");

            for(let i = 0; i < filesArray.length; i++) {
                //text += filesArray[i] + "<br>";
                runTestingProcess(filesArray[i]);
            }

            //runTestingProcess(testFile);

        });

        function runTestingProcess(testFile) {
            var url = Routing.generate('employees_run_test_ajax');
            $.ajax({
                url: url,
                timeout: _ajaxTimeout,
                dataType: 'json',
                async: true,
                data: {testFile: testFile},
            }).done(function(data) {
                $('#message').hide();
                $('#result').append(data);
            }).fail(function() {
                $('#message').text("Error: test suite failed to start");
            })
            .always(function() {
                $('#message').hide();
            });
        }
    </script>

{% endblock %}
