            function loginTypeOnchange() {

                $('#usernametypeid_show').on( 'change', function() {
                    $('#message').html("").hide();
                    $('#password').show();
                    var loginType = $(this).val();
                    console.log('loginTypeOnchange: loginType='+loginType);
