            function validateUsername() {
                var username = $('#display-username').val();
                if( loginValidateEmail(username) ) {
                    return true;
                }
                return false;
            }
            function loginValidateEmail(email) {
                return String(email)
                        .toLowerCase()
                        .match(
                                /^(([^<>()[\]\\.,;:\s@"]+(\.[^<>()[\]\\.,;:\s@"]+)*)|.(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/
                        );
            };

